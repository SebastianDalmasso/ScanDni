<?xml version="1.0" encoding="utf-8" ?>
<xtc:Popup  xmlns:xtc="http://xamarin.com/schemas/2020/toolkit" 
            xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="ScanDni.Views.HelpScan"
            Size="300,350" 
            Color="Transparent">
    
    <Frame CornerRadius="20" HasShadow="True">
        <StackLayout>
            <Image Source="barcode.png" HorizontalOptions="Center" Margin="0,10,5,0"/>
            <Label Text="¿Necesitas ayuda?" FontSize="18" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="5"/>
            <Label Text="Posiciona la linea roja del lector en el código QR de tu Dni!" FontSize="16" TextColor="Gray" HorizontalTextAlignment="Center" HorizontalOptions="Center" Margin="15,5,15,5"/>
            <Button Text="OK" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" CornerRadius="10" Clicked="BtOk_Clicked"
                    Margin="40,5,40,10" BackgroundColor="#28B463" TextColor="White"/>
        </StackLayout>
    </Frame>
</xtc:Popup>